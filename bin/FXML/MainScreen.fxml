<AnchorPane prefHeight="519.0" prefWidth="791.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="OBLFX.MainController">
   <children>
      <ImageView fitHeight="519.0" fitWidth="791.0">
         <image>
            <Image url="@../Images/MainPic.png" />
         </image>
         <effect>
            <Lighting bumpInput="$null" diffuseConstant="2.0" specularConstant="0.95" specularExponent="21.95">
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
      </ImageView>
      <Group layoutX="142.0" layoutY="145.0">
         <children>
            <RadioButton mnemonicParsing="false" selected="true" text="By Name">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="searchType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton layoutX="121.0" mnemonicParsing="false" text="By Author" toggleGroup="$searchType">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </RadioButton>
            <RadioButton layoutX="246.0" mnemonicParsing="false" text="By Subject" toggleGroup="$searchType">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </RadioButton>
            <RadioButton layoutX="374.0" mnemonicParsing="false" text="By Description" toggleGroup="$searchType">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </RadioButton>
         </children>
      </Group>
      <TextField fx:id="txtInput" alignment="TOP_LEFT" layoutX="111.0" layoutY="195.0" prefHeight="129.0" prefWidth="492.0" text="Enter your text here..." />
      <Label contentDisplay="CENTER" layoutX="338.0" layoutY="14.0" prefHeight="105.0" prefWidth="156.0" text="OBL" textAlignment="CENTER" textFill="#d32617">
         <font>
            <Font name="System Bold" size="72.0" />
         </font>
      </Label>
      <Button fx:id="btnSreach" layoutX="630.0" layoutY="232.0" mnemonicParsing="false" onAction="#searchBook" prefHeight="55.0" prefWidth="98.0" text="Search">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="errotMsg" alignment="CENTER" layoutX="356.0" layoutY="468.0" prefHeight="27.0" prefWidth="50.0" style="-fx-background-color: #ffffff;" text="error" visible="false" />
      <TextArea fx:id="searchResult" layoutX="186.0" layoutY="335.0" prefHeight="118.0" prefWidth="342.0" visible="false" />
   </children>
</AnchorPane>
