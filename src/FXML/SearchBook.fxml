<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="OBLFX.SearchBookController">
   <children>
      <Label fx:id="title" layoutX="17.0" layoutY="14.0" text="Title">
         <font>
            <Font name="System Bold Italic" size="26.0" />
         </font>
      </Label>
      <Label layoutX="17.0" layoutY="62.0" text="Search by :">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <RadioButton fx:id="type1" layoutX="100.0" layoutY="63.0" mnemonicParsing="false" onMousePressed="#clearFields" selected="true" text="type 1">
         <toggleGroup>
            <ToggleGroup fx:id="searchType" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="type2" layoutX="200.0" layoutY="63.0" mnemonicParsing="false" onMousePressed="#clearFields" text="type 2" toggleGroup="$searchType" />
      <RadioButton fx:id="type3" layoutX="300.0" layoutY="63.0" mnemonicParsing="false" onMousePressed="#clearFields" text="type 3" toggleGroup="$searchType" />
      <RadioButton fx:id="type4" layoutX="400.0" layoutY="63.0" mnemonicParsing="false" onMousePressed="#clearFields" text="type 4" toggleGroup="$searchType" />
      <RadioButton fx:id="type5" layoutX="500.0" layoutY="63.0" mnemonicParsing="false" onMousePressed="#clearFields" text="type 5" toggleGroup="$searchType" />
      <TextField fx:id="txtInput" layoutX="17.0" layoutY="97.0" onKeyTyped="#CheckSearch" prefHeight="30.0" prefWidth="350.0" />
      <Button fx:id="btnSearch" layoutX="367.0" layoutY="97.0" mnemonicParsing="false" onAction="#searchInLibrary" prefHeight="30.0" prefWidth="100.0" text="Search" />
      <Label fx:id="emptyMsg" layoutX="494.0" layoutY="102.0" text="Fill search field" textFill="#cd0000" visible="false">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TableView fx:id="tblResults" layoutX="14.0" layoutY="179.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" pickOnBounds="false" prefHeight="400.0" prefWidth="760.0">
         <columns>
            <TableColumn fx:id="col1" maxWidth="-Infinity" minWidth="186.0" prefWidth="185.0" resizable="false" text="col1" />
            <TableColumn fx:id="col2" maxWidth="-Infinity" minWidth="186.0" prefWidth="185.0" resizable="false" text="col2" />
            <TableColumn fx:id="col3" maxWidth="-Infinity" minWidth="186.0" prefWidth="185.0" resizable="false" text="col3" />
            <TableColumn fx:id="col4" maxWidth="-Infinity" minWidth="186.0" prefWidth="185.0" resizable="false" text="col4" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Label fx:id="lblResults" layoutX="17.0" layoutY="144.0" text="Search results :                 Double click on the row to see more details">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="lblNoResult" alignment="TOP_CENTER" contentDisplay="CENTER" layoutX="207.0" layoutY="214.0" prefHeight="20.0" prefWidth="380.0" text="No matching results found" visible="false">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="ResultMSGLabel" layoutX="471.0" layoutY="98.0" prefHeight="27.0" prefWidth="270.0" textFill="RED" />
   </children>
</AnchorPane>
